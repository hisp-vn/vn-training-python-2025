# Example .env file for OAuth 2.1 CLI Demo
# Copy this to .env and fill in your values

# Your DHIS2 server base URL (e.g., http://localhost:8080)
SERVER_BASE_URL=

# OAuth client ID registered in DHIS2
CLIENT_ID=

# OAuth client secret (for confidential clients)
CLIENT_SECRET=

# Scopes to request (space-separated, e.g., 'openid email')
SCOPE=openid email

# Redirect URI (must match what's registered in the client; use local for demo)
REDIRECT_URI=http://localhost:8000

# A protected API endpoint to test the access token (relative to SERVER_BASE_URL, e.g., /api/users/me)
API_ENDPOINT=/api/users/me
